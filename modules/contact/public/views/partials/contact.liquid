<h1 class="title">
  DocsKit contact form submission
</h1>

<table cellspacing="0">
  <tr>
    <td>
      <b>Name:</b>
    </td>
    <td style="width: 10px;"></td>
    <td>
      {{ data.name }}
    </td>
  </tr>
  <tr>
    <td>
      <b>Email:</b>
    </td>
    <td style="width: 10px;"></td>
    <td>
      {{ data.email }}
    </td>
  </tr>
  <tr>
    <td>
      <b>Subject:</b>
    </td>
    <td style="width: 10px;"></td>
    <td>{{ data.subject }}</td>
  </tr>
  <tr>
    <td>
      <b>Message:</b>
    </td>
    <td style="width: 10px;"></td>
    <td>
      {{ data.message | markdown }}
    </td>
  </tr>
</table>
